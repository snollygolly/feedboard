{
  "name": "feedboard",
  "version": "1.0.0",
  "description": "A billboard for displaying activity feeds",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack.prod.config.js",
    "dev": "webpack-dev-server --port 5002 --host 0.0.0.0 --devtool eval --progress --colors --hot --content-base ./build --config ./webpack.config.js",
    "seed": "node ./helpers/seed.js",
    "start": "NODE_ENV=local ./node_modules/.bin/nodemon -e js,hbs index.js",
    "production": "NODE_ENV=production node index.js >> /var/log/feedboard.log",
    "install": "bower install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snollygolly/feedboard.git"
  },
  "keywords": [
    "koa",
    "handlebars",
    "passport"
  ],
  "author": "snollygolly (@snollygolly)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/snollygolly/feedboard/issues"
  },
  "homepage": "https://github.com/snollygolly/feedboard#readme",
  "dependencies": {
    "co": "^4.6.0",
    "koa": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-generic-session": "^1.10.0",
    "koa-hbs": "^0.7.0",
    "koa-router": "^5.3.0",
    "koa-socket": "^4.2.1",
    "koa-static-folder": "^0.1.6",
    "lodash": "^4.8.2",
    "moment": "^2.12.0",
    "react": "^0.14.7",
    "react-bootstrap": "^0.28.5",
    "react-dom": "^0.14.7",
    "react-markdown": "^2.1.1",
    "react-router": "^2.0.1",
    "rethinkdb": "^2.2.3"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chai": "^3.4.1",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "file-loader": "^0.8.5",
    "istanbul": "^0.4.2",
    "json-loader": "^0.5.4",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.2.0",
    "shipit-cli": "^1.4.1",
    "shipit-deploy": "^2.1.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
